const http = require("http");
//create server 
const server =http.createserver((req,res)=>{
    res.statuscode = 200;
    res.setHeaders("comtent-type","text/plain");
     res.end("welcome to node js");

});
//listen on port 3000
server.listen(3000,()=>{
    console.log("server running on http://localhost:3000");
});
